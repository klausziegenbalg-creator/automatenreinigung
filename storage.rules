rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Punkt 6: Wochenwartung
    match /automatenwartung/{automatId}/{woche}/{taskId}/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // Punkt 7: Reparaturen / Wartung
    match /reparaturen/{automatId}/{datum}/{fileName} {
      allow read: if true;
      allow write: if request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }

    // alles andere: verboten
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
